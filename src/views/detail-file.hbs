{{#if pathName}}
<div class="tabs">
    <input type="radio" name="tabs" id="tab-nav-1" checked>
    <label for="tab-nav-1">Code</label>
    <input type="radio" name="tabs" id="tab-nav-2">
    <label for="tab-nav-2">Preview</label>
    <div class="tab-content">
        <div class="hljs">
            <pre><code>{{{fileContent}}}</code></pre>
        </div>
        <div>
            <div class="detail-preview">
                <iframe id="preview" src="{{pathName}}"></iframe>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="detail-header">
    <h1>
        <a href="/">{{> home-icon}}</a>
        <span>{{name}}</span>
    </h1>
</div>
<div class="detail-preview">
    <div class="detail-message">
        <p>{{message}}</p>
    </div>
</div>
{{/if}}